<h1>Actor #<%=@actor.id%> details</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>


<a href="/delete_actor/<%=@actor%>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
     <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
     <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>


  <tr>
    <%@movie_info.all.each do |movie|%>
    <td>
     <%=movie.title%>
    </td>

    <td>
      <%=movie.year%>
    </td>
     
    <td>
    <%d = Director.all.where(:id=>movie).at(0)%>
     <%=d.name%>
    </td>
    <td>
     <%c = Character.all.where(:id=>movie).at(0)%>
      <%=c.name%>
    </td>
    <td>
    <a href="/movies/<%=movie.id%>">Show details</a>
    </td>
    </tr>
   <%end%>
    
  </table>
